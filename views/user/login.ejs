<%- include('../partials/header'); -%>
    <style>
		.navbar{
			background-color: #fff !important;
		}
		body{
			background-color:#f4f3ef;
			overflow-x: hidden;
		}
        .card {
			background-color:#f4f3ef;
            border: none;
        }
        .form-control {
            border-radius: 25px;
        }
        .btn {
            border-radius: 25px;
            width: 25%;
			background-color: #ef8157;
			border: none;
        }
    </style>
</head>
<body>
	<nav class="navbar navbar-light bg-light vertical-center">
        <div class="container-fluid">
            <a class="navbar-brand vertical-center" href="#">
                <img src="https://image.shutterstock.com/image-vector/bm-logo-monogram-circle-piece-600w-1726954789.jpg" height="50" width="50" alt="" loading="lazy" />
            </a>
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0 mr-5">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="/">Home</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <div class="row">
            <div class="col-sm-6">
                <img src="https://i.imgur.com/awwhdW5.png" width="100%" height="100%" />
            </div>
            <div class="col-md-6" style="margin: auto auto">
                <div class="card card-body">
                    <h1 class="text-center mb-3"><i class="fas fa-sign-in-alt"></i> Login</h1>
                    <% ('include ../partials/messages'); %>
                        <form>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" id="email" name="email" class="form-control"
                                    placeholder="Enter Email" />
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" class="form-control"
                                    placeholder="Enter Password" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </form>
                        <p class="lead mt-4">
                            No Account? <a href="/users/register" style="color: #ef8157;">Register</a>
                        </p>
                </div>
            </div>
        </div>
    </div>
    

<div class="row mt-5">
    <div class="col-md-6 m-auto">

    </div>
</div>
<%- include('../partials/footer'); -%>
